@model AdvertisingCreativeCategory
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create New Advertising Creative Category";
}

@section JavaScript {
    <script src="@Url.Content("~/Scripts/raphael-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/colorwheel.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var cw = Raphael.colorwheel($(".colorwheel")[0], 150);
            cw.input($(".colorpicker")[0]);
        });
    </script>
}

@using (Html.BeginForm("Create"))
{
    @Html.Partial("_Form", Model)
}